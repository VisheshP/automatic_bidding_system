<nav class="site-header" style="padding: 10px; border-bottom: 1px solid #eee;">
  <div class="container" style="display:flex; justify-content:space-between; align-items:center;">
    <div style="display:flex; align-items:center; gap:18px;">
      <div class="brand">
        <%= link_to "Automatic Bidding", root_path, style: "font-weight: bold; font-size: 18px; text-decoration: none; color: #111;" %>
      </div>

      <div class="main-nav" style="display:flex; gap:12px; align-items:center;">
        <%= link_to "Items", items_path, style: "color: #333; text-decoration: none;" %>
        <%= link_to "Bids", bids_path, style: "color: #333; text-decoration: none;" %>
        <% if @current_user %>
          <%= link_to "My Profile", user_path(@current_user), style: "color: #333; text-decoration: none;" %>
        <% end %>
      </div>
    </div>

    <div class="nav-links">
      <% if @current_user %>
        <span style="margin-right: 8px;">Signed in as <strong><%= @current_user.full_name.presence || @current_user.email %></strong></span>
        <%= button_to "Logout", logout_path, method: :delete, form: { style: "display:inline;" }, class: "logout-button" %>
      <% else %>
        <%= link_to "Login", login_path, style: "margin-right:8px;" %>
        <%= link_to "Sign up", new_user_path %>
      <% end %>
    </div>
  </div>
</nav>
