<%= turbo_frame_tag "modal" do %>
  <main class="new-bid">
    <div class="container">
      <div class="top">
        <div>
          <div class="title">Place a Bid</div>
        </div>
      </div>
      <%= render "form", bid: @bid, url: item_bids_path(@item) %>
      <%= link_to "Close", :back, class: "back" %>
    </div>
  </main>
<% end %>
